{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
<style>
    input[type=text], input[type=password], input[type=submit] {
    width: 45%;
}
    #box-left span{
        color: green;
    }
</style>
{% endblock %}

{% block content %}
   <div id="box-full">
        <h1>Register</h1>
        <form action="" method="POST">
        Login: <br> <input type="text" name="login" autocomplete="off"><br>
        E-mail: <br> <input type="text" name="email" autocomplete="off"><br>
        Password: <br> <input type="password" name="password"><br>
        Repeat password: <br> <input type="password" name="password_again"><br>
  <input type="submit" value="Register">
</form>

        
        Do you already have an account?<br>
        <a href="{{ path('homepage') }}">Login</a>

    </div>
{% endblock %}

